# WasteWise Admin Dashboard Environment Configuration
# Copy this file to .env and update with your actual values

# API Configuration
REACT_APP_API_URL=http://localhost:8000/wastewise/api/v1
REACT_APP_WS_URL=ws://localhost:8000/wastewise/ws

# Google Maps Configuration
REACT_APP_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Application URLs
REACT_APP_FRONTEND_URL=http://localhost:3000
REACT_APP_BACKEND_URL=http://localhost:8000

# Environment
REACT_APP_ENV=development
REACT_APP_DEBUG=true

# Admin Features
REACT_APP_ENABLE_USER_MANAGEMENT=true
REACT_APP_ENABLE_ROUTE_PLANNING=true
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_REPORTS=true
REACT_APP_ENABLE_IOT_MONITORING=true

# Analytics
REACT_APP_GA_TRACKING_ID=UA-XXXXXXXXX-X
REACT_APP_MIXPANEL_TOKEN=your-mixpanel-token

# Sentry Error Tracking
REACT_APP_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Ghana Specific
REACT_APP_DEFAULT_COUNTRY=GH
REACT_APP_DEFAULT_CURRENCY=GHS
REACT_APP_DEFAULT_LANGUAGE=en
REACT_APP_DEFAULT_LAT=5.6037
REACT_APP_DEFAULT_LNG=-0.1870

# Map Settings
REACT_APP_MAP_DEFAULT_ZOOM=12
REACT_APP_MAP_MIN_ZOOM=10
REACT_APP_MAP_MAX_ZOOM=18

# Dashboard Settings
REACT_APP_REFRESH_INTERVAL=30000  # 30 seconds
REACT_APP_MAX_CHART_POINTS=100
REACT_APP_DEFAULT_PAGE_SIZE=25

# WebSocket Configuration
REACT_APP_WS_RECONNECT_INTERVAL=5000
REACT_APP_WS_MAX_RECONNECT_ATTEMPTS=10

# Export Settings
REACT_APP_ENABLE_CSV_EXPORT=true
REACT_APP_ENABLE_EXCEL_EXPORT=true
REACT_APP_ENABLE_PDF_EXPORT=true

# Cache Settings
REACT_APP_CACHE_TTL=300000  # 5 minutes in milliseconds

# Feature Flags
REACT_APP_SHOW_DEV_TOOLS=false
REACT_APP_ENABLE_DARK_MODE=true
REACT_APP_ENABLE_MULTI_LANGUAGE=false