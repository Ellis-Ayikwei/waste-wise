# WasteWise Backend Environment Configuration
# Copy this file to .env and update with your actual values

# Django Settings
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,wastewise.com

# Database Configuration (PostgreSQL with PostGIS)
DB_NAME=wastewise
DB_USER=postgres
DB_PASSWORD=your-database-password
DB_HOST=localhost
DB_PORT=5432

# Google Maps API (for geocoding and mapping)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
OPENWEATHERMAP_API_KEY=your-weather-api-key

# SendGrid Email Configuration
SENDGRID_API_KEY=your-sendgrid-api-key
DEFAULT_FROM_EMAIL=noreply@wastewise.com
SENDGRID_SANDBOX_MODE=False

# Alternative Email Configuration (SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password
EMAIL_USE_TLS=True

# Redis Configuration (for WebSockets and caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Stripe Payment Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# Payment URLs
PAYMENT_SUCCESS_URL=http://localhost:3000/payment/success
PAYMENT_CANCEL_URL=http://localhost:3000/payment/cancel

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# IoT Configuration
IOT_API_KEY=your-iot-api-key-for-sensor-authentication
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_USERNAME=wastewise
MQTT_PASSWORD=your-mqtt-password

# AWS S3 (for file uploads)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=wastewise-uploads
AWS_S3_REGION_NAME=us-east-1

# Twilio (for SMS notifications)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Analytics
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
MIXPANEL_TOKEN=your-mixpanel-token

# Sentry (for error tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Application URLs
FRONTEND_URL=http://localhost:3000
ADMIN_URL=http://localhost:3001
API_URL=http://localhost:8000

# Security
SESSION_COOKIE_SECURE=False  # Set to True in production with HTTPS
CSRF_COOKIE_SECURE=False     # Set to True in production with HTTPS
SECURE_SSL_REDIRECT=False    # Set to True in production with HTTPS

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/wastewise/app.log

# Ghana Specific Settings
DEFAULT_COUNTRY=GH
DEFAULT_CURRENCY=GHS
DEFAULT_TIMEZONE=Africa/Accra
DEFAULT_LANGUAGE=en

# Feature Flags
ENABLE_IOT_FEATURES=True
ENABLE_ROUTE_OPTIMIZATION=True
ENABLE_CITIZEN_REPORTING=True
ENABLE_ANALYTICS=True
ENABLE_NOTIFICATIONS=True

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Cache Settings
CACHE_TTL_SECONDS=300
USE_REDIS_CACHE=True

# Backup Configuration
BACKUP_ENABLED=True
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
