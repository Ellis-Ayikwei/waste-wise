# Django Settings
SECRET_KEY=your-django-secret-key-here
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/wasgo_db

# Paystack Configuration (NEVER expose these in frontend)
PAYSTACK_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
PAYSTACK_PUBLIC_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Security
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Redis (for caching and websockets)
REDIS_URL=redis://localhost:6379/0

# File Storage
MEDIA_ROOT=/path/to/media
STATIC_ROOT=/path/to/static

# Google Maps API (if using location services)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key